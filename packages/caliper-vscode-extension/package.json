{
  "name": "hyperledger-caliper-extension",
  "displayName": "Hyperledger Caliper Integration",
  "description": "",
  "version": "0.5.1-unstable",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eravatee/caliper/tree/vscode-extension"
  },
  "activationEvents": [
    "onView:configFileExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "configFile-explorer",
					"title": "Explorer",
          "icon": "resources/dark/document_dark.svg",
          "contextualTitle": "Config File Explorer"
        }
      ]
    },
    "views": {
      "configFile-explorer": [
        {
					"id": "configFileExplorer",
					"name": "Config Files"
				}
      ]
    },
    "commands": [
      {
        "command": "configScripts.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "configScripts.openResource",
        "title": "Open ConfigFile Resource"
      },
      {
				"command": "configFileExplorer.refreshFile",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh_light.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "configFileExplorer.openFile",
				"title": "Open File"
			}
    ],
    "menus": {
      "view/title": [
        {
          "command": "configScripts.refreshEntry",
          "when": "view == configScripts",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
					"command": "configFileExplorer.refreshFile",
					"when": "view == configFileExplorer && viewItem == file",
					"group": "inline"
				}
      ]
    },
    "yamlValidation": [
      {
        "fileMatch": "calrun.yaml",
        "url": "./artifacts/json-schema/hyperledger-caliper-runtime-configuration.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "dependencies": {
    "ftp": "^0.3.10",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "walk": "^2.3.15"
  }
}
